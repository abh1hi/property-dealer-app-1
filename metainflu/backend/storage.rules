rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check file size (max 5MB)
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // Helper function to check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // Property images
    match /properties/{propertyId}/{fileName} {
      // Anyone can read
      allow read: if true;
      
      // Only authenticated users can upload
      // Must be an image and under 5MB
      allow create: if isAuthenticated() && isImage() && isValidSize();
      
      // Only the uploader can delete
      allow delete: if isAuthenticated();
    }

    // User profile pictures
    match /users/{userId}/profile/{fileName} {
      // Anyone can read
      allow read: if true;
      
      // Only the user themselves can upload their profile picture
      allow create, update: if isAuthenticated() && 
                               request.auth.uid == userId && 
                               isImage() && 
                               isValidSize();
      
      // Only the user themselves can delete
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // Temporary uploads
    match /temp/{userId}/{fileName} {
      // Only the user can read their temp files
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Only the user can upload to their temp folder
      allow create: if isAuthenticated() && 
                       request.auth.uid == userId && 
                       isImage() && 
                       isValidSize();
      
      // Only the user can delete their temp files
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
