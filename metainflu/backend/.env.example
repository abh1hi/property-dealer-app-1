# Environment Configuration
NODE_ENV=production
PORT=5001

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/property-dealer

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-randomly-generated
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-randomly-generated
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Firebase Configuration
FIREBASE_PROJECT_ID=apnaashiyanaa-app
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email@appspot.gserviceaccount.com

# CORS Configuration (comma-separated URLs)
CORS_ORIGINS=https://app.example.com,https://admin.example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=5
OTP_RATE_LIMIT_MAX=2

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Server Configuration
API_TIMEOUT=30000
BODY_SIZE_LIMIT=50mb

# Security
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health